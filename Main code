#include <iostream>
using namespace std;

int main() {
	  int T;std::cin >> T;
	  while(T--)
	  {
	      int N;std::cin >> N;
	      if(N==2)
	      {
	          std::cout << N << std::endl;
	      }
	      else{
	          if(N%2!=0)
	          {
	              std::cout << (N+1)/2 << std::endl;
	          }
	          else{
	              std::cout << (N+2)/2 << std::endl;
	          }
	      }
	  }
	  
	return 0;
}
